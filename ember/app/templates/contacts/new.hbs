<div {{bind-attr class=panel}}>
	<div class="panel-heading">
		<div class="container-fluid">
				<div class="col-lg-3">
					<h3 class="panel-title">New Contact</h3>
				</div>

				<div class="col-lg-9">
					{{#if showError}}
						Contact must have all the fields entered
					{{/if}}
				</div>
			</div>
	</div>

	<div class="panel-content">
		<div class="form-wrapper">
			<form class="form-horizontal" role="form">

				<div class="form-group">
					<label for="inputfirstName" class="col-lg-2 control-label">First Name</label>
					<div class="col-lg-10">
						{{input value=fields.firstName class="form-control"}}
					</div>
				</div>

				<div class="form-group">
					<label for="inputlastName" class="col-lg-2 control-label">Last Name</label>
					<div class="col-lg-10">
						{{input value=fields.lastName class="form-control"}}
					</div>
				</div>

				<div class="form-group">
					<label for="inputEmail" class="col-lg-2 control-label">Email</label>
					<div class="col-lg-10">
						{{input value=fields.email class="form-control"}}
					</div>
				</div>

				<div class="form-group">
	    			<div class="col-lg-offset-2 col-lg-10">
	      				<button type="submit" class="btn btn-default" {{action 'createContact'}}>Create Contact</button>
	   			 	</div>
	 			 </div>

			</form>
		</div>

	</div>
</div>